@model IEnumerable<Project.Models.ADMIN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-question-circle"></i><a href="#">Bài tập</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-advance table-hover">
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Quyền quản trị
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Username
                    </td>
                    <td>
                        @item.QuyenQuanTri
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-danger" onclick="return confirm('Are you sure?')" href="/Management/NguoiQuanTri/Xoa?id=@item.ID"><i class="icon_close_alt2"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

