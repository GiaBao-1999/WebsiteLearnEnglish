@model IEnumerable<Project.Models.HOC_VIEN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Khóa học</a></li>
            <li><i class="icon_mail"></i><a href="/Management/CourseManagerment/SendMail">Gửi thông báo đến học viên</a></li>
            <li><i class="fa fa-info"></i><a href="/Management/CourseManagerment/Insert">Thêm khóa học mới</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-advance table-hover">
            <tbody>
                <tr>
                    <th><i class="icon_profile"></i> Tên học viên</th>
                    <th><i class="icon_mail_alt"></i> Email</th>
                    <th><i class="icon_pin_alt"></i> Số khóa học tham gia</th>
                    <th>Action</th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td>@item.DANG_KY.Count()</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-danger" onclick="return confirm('Có chắc muốn xóa học viên này?');" href="/Management/QuanLyHocVien/Delete?ID=@item.IDHocVien"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</div>

