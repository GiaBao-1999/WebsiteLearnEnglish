@model Project.Models.KHOA_HOC

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Khóa học</a></li>
            <li><i class="fa fa-info"></i><a href="#">Thêm khóa học mới</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">Thêm mới khóa học</header>
            <div class="panel-body">
                @using (Html.BeginForm( new { @enctype="multipart/form-data"}))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.TenKhoaHoc)
                        
                            @Html.EditorFor(model => model.TenKhoaHoc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenKhoaHoc, "", new { @class = "text-danger" })
                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTaKhoaHoc)
                      
                            @Html.EditorFor(model => model.MoTaKhoaHoc, new { htmlAttributes = new { @class = "form-control" } })
                        <script type="text/javascript">
                            CKEDITOR.replace("MoTaKhoaHoc");
                        </script>
                            @Html.ValidationMessageFor(model => model.MoTaKhoaHoc, "", new { @class = "text-danger" })
                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.HanDangKy)
                       
                            @Html.EditorFor(model => model.HanDangKy, new { htmlAttributes = new { @class = "form-control", @id="dp1" } })
                            @Html.ValidationMessageFor(model => model.HanDangKy, "", new { @class = "text-danger" })
                       
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IDCapDo, "IDCapDo")
                       
                            @Html.DropDownList("IDCapDo", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDCapDo, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.img)
                      
                            <input type="file" required  name="img" class="form-control" />
                            @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                       
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
