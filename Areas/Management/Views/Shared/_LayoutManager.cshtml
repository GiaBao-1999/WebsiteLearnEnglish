    <script src="~/Theme/js/jquery-1.8.3.min.js"></script>
    <script type="~/Theme/text/javascript" src="js/jquery-ui-1.9.2.custom.min.js"></script>
    <!-- bootstrap -->
    <script src="~/Theme/js/bootstrap.min.js"></script>
