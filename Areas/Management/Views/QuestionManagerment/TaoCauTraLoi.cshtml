@model Project.Models.CAU_TRA_LOI
@{
    ViewBag.Title = "TaoCauTraLoi";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-info"></i><a href="#">Tạo câu trả lời</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Tạo câu trả lời
            </header>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    for (int i = 1; i <= ViewBag.Socautraloi; i++)
                    {
                        <h5>Câu trả lời thứ @i:</h5>
                        <div class="form-group">
                            <label>Nội dung câu trả lời</label>
                            <input type="hidden" name="index" value="@i" />
                            <input type="text" required name="@i" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Đáp án đúng</label><br />
                            <input type="radio" name="LaDapAn+@i" value="true" /> Là đáp án đúng<br />
                            <input type="radio" name="LaDapAn+@i" checked="checked" value="false" />Đáp án sai
                        </div>
                    }
                    <input type="hidden" name="MaCauHoi" value="@ViewBag.Macauhoi" />
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                }
            </div>
        </section>
    </div>
</div>

