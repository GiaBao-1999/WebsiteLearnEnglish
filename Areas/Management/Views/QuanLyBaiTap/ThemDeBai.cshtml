@model IEnumerable<Project.Models.CAU_HOI>
@{
    ViewBag.Title = "ThemDeBai";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-question-circle"></i><a href="#">Bài tập</a></li>
            <li><i class="fa fa-question"></i><a href="#">Tạo đề bài</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">Chọn câu hỏi</header>
            <div class="panel-body">
                
                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th>Nội dung câu hỏi</th>
                            <th>Số câu trả lời</th>
                            <th>Loại câu hỏi</th>
                            <th>Action</th>
                            <th>Chọn</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            using (Html.BeginForm())
                            {
                            <tr>

                                <td>@item.NoiDungCauHoi</td>
                                <td>@item.SoCauTraLoi</td>
                                <td>@((bool)item.LoaiCauHoi ? "Nghe" : "Trắc nghiệm")</td>
                                <td>@Html.ActionLink("Chi tiết", "Details", "QuestionManagerment", new { id = item.MaCauHoi })</td>
                                <td>
                                    <input type="hidden" name="IDBaitap" value="@ViewBag.IDBaitap" />
                                    <input type="hidden" name="Macauhoi" value="@item.MaCauHoi" />
                                    <input type="submit" value="Thêm" class="btn btn-success" />
                                </td>
                            </tr>
                                }
                            }
                    </table>
                    @Html.ActionLink("Hoàn tất", "Index", new { @class="btn btn-primary"})
            </div>
        </section>
    </div>
</div>


