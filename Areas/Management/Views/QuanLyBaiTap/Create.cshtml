@model Project.Models.BAI_TAP
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-question-circle"></i><a href="#">Câu hỏi</a></li>
            <li><i class="fa fa-question"></i><a href="/Management/QuestionManagerment/Create">Tạo câu hỏi mới</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <header class="panel-heading">Tạo bài tập</header>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Bài tập cho bài học:</label>
                    @Html.DropDownList("IDBaiHoc", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Cấp độ bài tập:</label>
                    @Html.DropDownList("IDLevel", null, new { @class = "form-control" })
                </div>
                <input type="submit" value="Create" class="btn btn-info" />
            }
        </div>
    </div>
</div>

