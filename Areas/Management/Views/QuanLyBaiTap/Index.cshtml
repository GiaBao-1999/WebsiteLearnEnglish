@model IEnumerable<Project.Models.BAI_TAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-question-circle"></i><a href="#">Bài tập</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-advance table-hover">
            <tr>
                <th>
                    Bài tập
                </th>
                <th>
                    Số lượng câu hỏi
                </th>
                <th>
                    Cấp độ
                </th>
                <th>
                    Bài học
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        Bài tập @item.IDBaiTap
                    </td>
                    <td>
                        @item.CAU_HOI.Count()
                    </td>
                    <td>
                        @item.CAP_DO_CAU_HOI.TenCapDo
                    </td>
                    <td>
                        @item.BAI_HOC.TenBaiHoc
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/Management/QuanLyBaiTap/Edit?id=@item.IDBaiTap"><i class="icon_plus_alt2"></i></a>
                            <a class="btn btn-success" href="/Management/QuanLyBaiTap/Details?id=@item.IDBaiTap"><i class="icon_check_alt2"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

