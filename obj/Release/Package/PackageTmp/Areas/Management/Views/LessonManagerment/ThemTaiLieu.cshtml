@model Project.Models.TAI_LIEU
@{
    ViewBag.Title = "ThemTaiLieu";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="#">Homec</a></li>
            <li><i class="icon_mail"></i><a href="#">Thêm tài liệu</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">  
            <header class="panel-heading">Tạo tài liệu</header>
            <div class="panel-body">
                @using (Html.BeginForm(new { @enctype="multipart/form-data"}))
                {
                    <div class="form-group">
                        <label>Tên tài liệu</label>
                        @Html.TextBoxFor(model=>model.TenTaiLieu,new { @class="form-control"})
                        @Html.ValidationMessageFor(model=>model.TenTaiLieu,"",new { @class="text-danger"})
                    </div>
                    <div class="form-group">
                        <label>File</label>
                        <input type="file" name="FilePath" class="form-control" />
                        @Html.ValidationMessageFor(model => model.FilePath, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Create" class="btn btn-default" />
                }
            </div>
        </section>
    </div>
</div>

