@model PagedList.IPagedList<Project.Models.BAI_HOC>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Khóa học</a></li>
            <li><i class="fa fa-info"></i><a href="#">Bài học</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-advance table-hover">
            <tr>
                <th>
                    Tên khóa học
                </th>
                <th>
                    Tên bài học
                </th>
                <th>
                   Mô tả bài học
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KHOA_HOC.TenKhoaHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenBaiHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTaBaiHoc)
                    </td>
                   
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/Management/LessonManagerment/Edit?id=@item.IDBaiHoc"><i class="icon_plus_alt2"></i></a>
                            <a class="btn btn-success" href="/Management/LessonManagerment/Details?id=@item.IDBaiHoc"><i class="icon_check_alt2"></i></a>
                            <a class="btn btn-danger" onclick="return confirm('Có chắc muốn xóa khóa học này?')" href="/Management/LessonManagerment/Delete?id=@item.IDBaiHoc"><i class="icon_close_alt2"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-center">
        @Html.PagedListPager(Model,page=>Url.Action("Index",new { page}))
    </div>
</div>

