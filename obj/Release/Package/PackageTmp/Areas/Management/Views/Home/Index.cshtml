
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
        </ol>
        @Html.ValidationSummary(true,"",new { @class = "text-danger" })
    </div>

</div>
<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="info-box blue-bg">
            <i class="fa fa-users"></i>
            <div class="count">@ViewBag.slhocvien</div>
            <div class="title">Số lượng học viên</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="info-box brown-bg">
            <i class="fa fa-shopping-cart"></i>
            <div class="count">@ViewBag.slkhoahoc</div>
            <div class="title">Số lượng khóa học</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="info-box dark-bg">
            <i class="fa fa-comments"></i>
            <div class="count">@ViewBag.slbinhluan</div>
            <div class="title">Đánh giá</div>
        </div>
        <!--/.info-box-->
    </div>
</div>

