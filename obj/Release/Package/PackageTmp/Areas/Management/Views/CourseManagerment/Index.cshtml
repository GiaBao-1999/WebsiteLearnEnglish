@model PagedList.IPagedList<Project.Models.KHOA_HOC>
@using PagedList.Mvc
@{
    ViewBag.Title = "Quản lý khóa học";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Khóa học</a></li>
            <li><i class="icon_mail"></i><a href="/Management/CourseManagerment/SendMail">Gửi thông báo đến học viên</a></li>
            <li><i class="fa fa-info"></i><a href="/Management/CourseManagerment/Insert">Thêm khóa học mới</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-advance table-hover">
            <tbody>
                <tr>
                    <th><i class="icon_profile"></i> Tên khóa học</th>
                    <th><i class="icon_calendar"></i> Ngày tạo</th>
                    <th><i class="icon_mail_alt"></i> Hình ảnh</th>
                    <th><i class="icon_pin_alt"></i> Số học viên tham gia</th>
                    <th><i class="icon_mobile"></i> Chứng chỉ</th>
                    <th><i class="icon_cogs"></i> Action</th>
                    
                </tr>
          
              @foreach (var item in Model)
              {
                <tr>
                    <td>@item.TenKhoaHoc</td>
                    <td>@item.NgayTao</td>
                    <td><img src="~/Content/img/PicEnglish/@item.img" style="width:90px;height:60px;" /></td>
                    <td>@item.DANG_KY.Count()</td>
                    <td>@item.CAP_DO.TenChungChi</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/Management/CourseManagerment/Edit?ID=@item.IDKhoaHoc"><i class="icon_plus_alt2"></i></a>
                            <a class="btn btn-success" href="/Management/LessonManagerment/Create?ID=@item.IDKhoaHoc"><i class="icon_plus_alt2"></i></a>
                            <a class="btn btn-danger" onclick="return confirm('Có chắc muốn xóa khóa học này?');" href="/Management/CourseManagerment/Delete?ID=@item.IDKhoaHoc"><i class="icon_close_alt2"></i></a>
                        </div>
                    </td>
                </tr>
              }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index",new { page}))
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-center">
        @Html.ValidationSummary(true,"",new { @class="text-danger"})
    </div>
</div>

