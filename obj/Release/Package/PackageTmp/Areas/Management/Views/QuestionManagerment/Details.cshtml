@model Project.Models.Question
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-question"></i><a href="#">Câu hỏi</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Chi tiết câu hỏi
            </header>
            <div class="panel-body">
                <p>@Model.NoiDungCauHoi</p>
                <ol class="ordered-list-alpha">
                    @foreach(var item in Model.ListCauTraLoi)
                    {
                        <li>@item.NoiDungCauTraLoi</li>
                    }
                </ol>
            </div>
        </section>
    </div>
</div>

