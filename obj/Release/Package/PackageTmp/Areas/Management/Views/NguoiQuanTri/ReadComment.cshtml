@model IEnumerable<Project.Models.BINH_LUAN>
@{
    ViewBag.Title = "ReadComment";
    Layout = "~/Areas/Management/Views/Shared/_LayoutManager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Quản Trị</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-mail-reply"></i><a href="#">Đọc bình luận</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-advance table-hover">
            <tr>
                <th>
                    Học viên
                </th>
                <th>
                    Bài học
                </th>
                <th>
                    Nội dung
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.HOC_VIEN.HoTen
                    </td>
                    <td>
                        @item.BAI_HOC.TenBaiHoc
                    </td>
                    <td>
                        @item.NoiDung
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/Management/NguoiQuanTri/GuiMail?id=@item.IDHocVien"><i class="icon_mail"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

