@model Project.Models.StudentLoginView
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="feature-area">
    <div class="container">
        
            
            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8 feature-item">
                        <div class="row text-center" style="margin-top:10px;">
                            <div class="col-md-12">
                                <div class="typography">
                                    <h2>Đăng Nhập</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-4 text-center">
                                <label>Email</label>
                            </div>
                            <div class="col-md-8">

                                <input type="email" name="Email" placeholder="Email Address" onfocus="this.placeholder=''" onblur="this.placeholder='Email Address'" required class="single-input" />
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-4 text-center">
                                <label>Mật khẩu</label>
                            </div>
                            <div class="col-md-8">


                                <input type="password" name="Password" placeholder="Password" onfocus="this.placeholder=''" onblur="this.placeholder='Password'" required class="single-input" />
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-12 text-center">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <input type="submit" value="Login" class="btn btn-info" />
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-12 text-center">
                                Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký tại đây", "Register")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
               
            }
        
       
        

      
    </div>
</section>

