@model Project.Models.StudentRegisterView
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<section class="feature-area">
    <div class="container">
        @using (Html.BeginForm())
            {
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8 feature-item">
                    <div class="row text-center" style="margin-top:10px;">
                        <div class="col-md-10">
                            <div class="typography">
                                <h2>Đăng Ký</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-4 text-center">
                            <label>Họ tên</label>
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.HoTen, new { @class = "single-input", @placeholder = "Nhập họ tên" })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-4 text-center">
                            <label>Email</label>
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Email, new { @class = "single-input", @placeholder = "Nhập Email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-4 text-center">
                            <label>Mật khẩu</label>
                        </div>
                        <div class="col-md-8">
                            @Html.PasswordFor(model => model.Password, new { @class = "single-input", @placeholder = "Mật khẩu" })

                            
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-4 text-center">
                            <label>Nhập lại mật khẩu</label>
                        </div>
                        <div class="col-md-8">

                            @Html.PasswordFor(model=>model.PasswordConfirm,new { @class= "single-input", @placeholder = "Nhập lại mật khẩu" })
                            
                            @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-12 text-center">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <input type="submit" value="Register" class="btn btn-info" />
                        </div>
                    </div>
                   
                </div>
                <div class="col-md-2"></div>
            </div>
        }
    </div>
</section>



