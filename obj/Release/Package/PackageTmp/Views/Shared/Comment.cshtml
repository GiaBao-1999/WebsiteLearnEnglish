@model IEnumerable<Project.Models.BINH_LUAN>
<div class="comments-area" style="overflow-y:auto; max-height:500px;">
    <h4>@Model.Count() Đánh giá</h4>
   
            @foreach (var item in Model)
            {
                <div class="comment-list">
                    <div class="single-comment justify-content-between d-flex">
                        <div class="user justify-content-between d-flex">
                            <div class="thumb">
                                <img src="~/Content/img/User_1.png" alt="">
                            </div>
                            <div class="desc">
                                <h5><a href="#">@item.HOC_VIEN.HoTen</a></h5>
                                <p class="date">December 4, 2017 at 3:12 pm </p>
                                <p class="comment">
                                    @item.NoiDung
                                </p>
                            </div>
                        </div>
                        <div class="reply-btn">
                            <a href="" class="btn-reply text-uppercase">reply</a>
                        </div>
                    </div>
                </div>
            }
        </div>
  
