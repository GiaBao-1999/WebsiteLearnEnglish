@model PagedList.IPagedList<Project.Models.KHOA_HOC>
@using PagedList.Mvc
@{
    ViewBag.Title = "Shine";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<section class="courses-area section-gap">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 about-right">
                <h1>
                    Các Khóa Học Theo Chứng Chỉ
                </h1>
                <div class="wow fadeIn" data-wow-duration="1s">
                    <p>
                        There is a moment in the life of any aspiring astronomer that it is time to buy that first telescope. It’s exciting to think
                        about setting up your own viewing station. In the life of any aspiring astronomer that it is time to buy that first
                        telescope. It’s exciting to think about setting up your own viewing station.
                    </p>
                </div>
                <a href="courses.html" class="primary-btn white">Explore Courses</a>
            </div>
            <div class="offset-lg-1 col-lg-6">
                <div class="courses-right">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <ul class="courses-list">
                                <li>
                                    <a class="wow fadeInLeft" href="#" data-wow-duration="1s" data-wow-delay=".1s">
                                        <i class="fa fa-book"></i> TOEIC
                                    </a>
                                </li>
                                <li>
                                    <a class="wow fadeInLeft" href="#" data-wow-duration="1s" data-wow-delay=".3s">
                                        <i class="fa fa-book"></i> IELTS
                                    </a>
                                </li>
                                <li>
                                    <a class="wow fadeInLeft" href="#" data-wow-duration="1s" data-wow-delay=".5s">
                                        <i class="fa fa-book"></i> TOEFL
                                    </a>
                                </li>
                              
                            </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="feature-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center">
                    <h1>Danh Sách Khóa Học</h1>
                    <p>
                        If you are looking at blank cassettes on the web, you may be very confused at the difference in price. You may see some for
                        as low as $.17 each.
                    </p>
                </div>
            </div>
        </div>
        <div class="feature-inner row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="feature-item">
                        <div class="row">
                            <div class="col-sm-12">
                                <img class="img-fluid" src="~/Content/img/PicEnglish/@item.img" style="width:269px;height:155px;" />
                            </div>
                        </div>
                        <h4 class="text-center"><span style="font-size:14px;">@item.TenKhoaHoc</span></h4>
                        <div class="wow fadeIn" data-wow-duration="1s" data-wow-delay=".1s">
                            <ul class="unordered-list">
                                <li>Học viên tham gia: <span class="text-danger">@item.DANG_KY.Count()</span> </li>
                                <li>Số lượng bài hoc: <span class="text-danger">@item.BAI_HOC.Count()</span> </li>
                            </ul>
                        </div>
                        <div class="row" style="margin-top:5px;">
                            <div class="col-sm-12 text-center">
                             
                                @Html.ActionLink("Chi tiết", "Detail", "Default", new { ID = item.IDKhoaHoc }, new { @class = "btn btn-info" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;">
                            <div class="col-sm-12 text-center">
                                @Html.ActionLink("Đăng ký","Index","Course",new { ID = item.IDKhoaHoc}, new { @class="btn btn-warning"})
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            @Html.PagedListPager(Model, page => Url.Action("Index",new { page}))
        </div>
    </div>
</section>



