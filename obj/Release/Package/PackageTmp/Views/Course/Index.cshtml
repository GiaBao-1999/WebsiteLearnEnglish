
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<section class="feature-area">
    <div class="container">
        <form action="/Course/Confirm" method="post">
            <div class="row">
              
                <div class="col-md-12 feature-item">
                    <div class="row text-center" style="margin-top:10px;">
                        <div class="col-md-12">
                            <div class="typography">
                                <h4>Vui lòng kiểm tra Email và nhập mã xác nhận</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-4 text-center">
                            <label>Mã xác nhận</label>
                        </div>
                        <div class="col-md-6">

                            <input type="text" name="maxacnhan" placeholder="Nhập mã xác nhận" onfocus="this.placeholder=''" onblur="this.placeholder='Nhập mã xác nhận'" required class="single-input" />

                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Submit" class="btn btn-info" />
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-md-12 text-center">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
              
            </div>

        </form>
    </div>
</section>

